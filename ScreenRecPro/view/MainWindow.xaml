                    <Border x:Name="SettingsActive" HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="1155,92,0,0"
                Width="20"
                Height="4"
                Background="#FFF3892F"
                CornerRadius="1.5"
                Visibility="Hidden"
                            />

                    <Border x:Name="infoActive" HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="1207,92,0,0"
